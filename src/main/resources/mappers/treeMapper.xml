<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.quiz.lesson06.tree.mapper.TreeMapper">
 	<select id="selectTreeList" resultType="com.quiz.lesson06.tree.domain.Tree">
 		SELECT 
 			`id`
			,`name`
			,`headcount`
			,`day`
			,`date`
			,`phoneNumber`
			,`state`
			,`createdAt`
			,`updatedAt`
		FROM
			`booking`
 	</select>
 	
 	<delete id="deleteTreeById" parameterType="int">
 		DELETE FROM `booking`
 		WHERE `id` = #{id}
 	</delete>
 
 	<insert id="insertTree" parameterType="map">
 		INSERT INTO `booking`
 		(	`name`
			,`headcount`
			,`day`
			,`date`
			,`phoneNumber`
			,`state`
			, `createdAt`
			, `updatedAt`
			)
 		VALUES
 		(	#{name}
 			,#{headcount}
 			,#{day}
 			,#{date}
 			,#{phoneNumber}
 			, '대기중'
 			, NOW()
 			, NOW()
 			)
 	</insert>
 </mapper>